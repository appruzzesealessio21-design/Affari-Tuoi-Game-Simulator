VALORI_BASE = [0, 1, 5, 10, 20, 50, 100, 200, 500, 0.01, 15000, 20000, 30000, 50000, 75000, 100000, 200000, 250000, 300000]

class AffariTuoiV7:
    def __init__(self):
        self.output = widgets.Output()
        self.nome = ""
        self.fase = "START"
        self.numeri_disponibili = list(range(1, 21))
        self.pacco_giocatore = None
        self.pacchi_segreti = {}
        self.aperti_ora = 0
        self.pacchi_da_aprire = 6
        self.reveal_info = None
        self.vincita_finale = None
        self.ultima_mossa_dottore = None
        self.pacco_nero_svelato = False
        self.premi_attivi = []
        self.mappa_premi = {}
        self.messaggio_evento = ""
        self._inizializza_mappa_base()

    def _inizializza_mappa_base(self):
        for i, v in enumerate(VALORI_BASE):
            self.mappa_premi[i] = {"id": i, "val": v, "nome": self.format_val(v), "tipo": "std"}
        self.mappa_premi[99] = {"id": 99, "val": 0, "nome": "PACCO NERO", "tipo": "nero"}
        self.premi_attivi = list(self.mappa_premi.keys())

    def format_val(self, v):
        if v == 0.01: return "0.01 € (Gennarino)"
        if v == 0: return "0 €"
        return f"{v:,.0f} €".replace(",", ".")

    def start_game(self, nome):
        self.nome = nome if nome.strip() else ""
        premi_lista = []
        for i, v in enumerate(VALORI_BASE):
            premi_lista.append({"id": i, "val": v, "nome": self.format_val(v), "tipo": "std"})
        val_nero = random.choice(VALORI_BASE)
        premi_lista.append({"id": 99, "val": val_nero, "nome": "PACCO NERO", "tipo": "nero", "val_real": self.format_val(val_nero)})
        self.mappa_premi = {p["id"]: p for p in premi_lista}
        self.premi_attivi = list(self.mappa_premi.keys())
        random.shuffle(premi_lista)
        self.pacchi_segreti = {i+1: premi_lista[i] for i in range(20)}
        self.fase = "CHOICE"
        self.update_ui()

    def apri_pacco(self, n):
        if n not in self.numeri_disponibili: return
        self.messaggio_evento = ""
        premio = self.pacchi_segreti[n]
        self.reveal_info = (n, premio)
        if premio["id"] in self.premi_attivi:
            self.premi_attivi.remove(premio["id"])
        self.numeri_disponibili.remove(n)
        self.aperti_ora += 1
        self.pacco_nero_svelato = False
        self.update_ui()

    def svela_nero_click(self, b):
        self.pacco_nero_svelato = True
        self.update_ui()

    def prosegui(self, b):
        self.reveal_info = None
        if self.aperti_ora >= self.pacchi_da_aprire:
            if len(self.numeri_disponibili) > 1:
                self.fase = "DOCTOR"
            else:
                self.fase = "END"
        self.update_ui()

    def render_column(self, is_left):
        html = ""
        if is_left:
            vals = sorted([v for v in VALORI_BASE if v < 10000])
            for v in vals:
                p_id = next(pid for pid, p in self.mappa_premi.items() if p["val"] == v and p["tipo"] == "std")
                status = "" if p_id in self.premi_attivi else "gone"
                html += f"<div class='prize-box blue-p {status}'>{self.format_val(v)}</div>"
        else:
            status_nero = "" if 99 in self.premi_attivi else "gone"
            html += f"<div class='prize-box black-p {status_nero}'>PACCO NERO</div>"
            vals = sorted([v for v in VALORI_BASE if v >= 10000])
            for v in vals:
                p_id = next(pid for pid, p in self.mappa_premi.items() if p["val"] == v and p["tipo"] == "std")
                status = "" if p_id in self.premi_attivi else "gone"
                html += f"<div class='prize-box red-p {status}'>{self.format_val(v)}</div>"
        return widgets.HTML(f"<div>{html}</div>")

    def update_ui(self):
        with self.output:
            clear_output(wait=True)

            # HEADER
            header = widgets.HTML(f"""
                <div class='header-gold'>
                    <span style='font-size: 28px; font-weight: 900; text-shadow: 2px 2px 4px #000; font-family: Oswald;'>AFFARI TUOI</span>
                    <div style='text-align:right;'>
                        <span style='font-size: 18px; font-weight: 700; color: #fff;'>GIOCATORE: {self.nome.upper()}</span><br>
                        <span style='font-size: 22px; font-weight: 900; background: #000; color: #d4af37; padding: 2px 10px; border-radius: 5px;'>TUO PACCO: {self.pacco_giocatore if self.pacco_giocatore else '--'}</span>
                    </div>
                </div>
            """)

            center = widgets.VBox(layout=widgets.Layout(width='45%', align_items='center'))

            if self.reveal_info:
                n, p = self.reveal_info
                if p["tipo"] == "nero" and not self.pacco_nero_svelato:
                    btn = widgets.Button(description="PACCO NERO", layout=widgets.Layout(width='250px', height='100px'))
                    btn.add_class("btn-reveal-nero"); btn.on_click(self.svela_nero_click)
                    center.children = [
                        widgets.HTML(f"<div class='reveal-card'><h2 style='color:#aaa'>PACCO {n}</h2><p style='margin-bottom:20px'>CLICCA IL PACCO PER SVELARE IL VALORE!</p></div>"),
                        btn
                    ]
                else:
                    val_txt = p["val_real"] if p["tipo"] == "nero" else p["nome"]
                    color = "#00d2ff" if p["val"] < 10000 and p["tipo"] == "std" else "#ff1744"
                    if p["tipo"] == "nero": color = "#fff"
                    center.children = [
                        widgets.HTML(f"<div class='reveal-card'><h2 style='color:#aaa'>PACCO {n} CONTENEVA</h2><div class='reveal-value' style='color:{color}'>{val_txt}</div></div>"),
                        widgets.Button(description="PROSEGUI", button_style='warning', layout=widgets.Layout(width='200px', height='50px', margin='20px'))
                    ]
                    center.children[1].on_click(self.prosegui)

            elif self.fase == "START":
                in_n = widgets.Text(placeholder='Nome...', layout=widgets.Layout(width='280px'))
                btn = widgets.Button(description="GIOCA", button_style='success', layout=widgets.Layout(width='280px', height='50px'))
                btn.on_click(lambda x: self.start_game(in_n.value))
                center.children = [widgets.HTML("<h2 style='margin-top:100px'>BENVENUTO</h2>"), in_n, btn]

            elif self.fase == "CHOICE":
                center.children = [widgets.HTML("<h2 style='color:#d4af37'>SCEGLI IL TUO PACCO</h2>"), self.get_grid(self.numeri_disponibili, self.sel_ini)]

            elif self.fase == "GAME":
                ev_info = widgets.HTML(f"<div style='color:#2ecc71; margin-bottom:10px;'>{self.messaggio_evento}</div>") if self.messaggio_evento else widgets.HTML("")
                center.children = [ev_info, widgets.HTML(f"<h2>APRI {self.pacchi_da_aprire - self.aperti_ora} PACCHI</h2>"), self.get_grid(sorted(self.numeri_disponibili), self.sel_game)]

            elif self.fase == "SWAP_CHOICE":
                center.children = [widgets.HTML("<h2 style='color:#f39c12'>QUALE PACCO VUOI PRENDERE?</h2><p>Scegli il pacco da scambiare con il tuo attuale.</p>"), self.get_grid(sorted(self.numeri_disponibili), self.esegui_scambio_manuale)]

            elif self.fase == "DOCTOR":
                self.render_doctor_ui(center)

            elif self.fase == "END":
                p_f = self.pacchi_segreti[self.pacco_giocatore]
                val_f = p_f["val_real"] if p_f["tipo"] == "nero" else p_f["nome"]
                info_altro = ""
                if len(self.numeri_disponibili) == 1:
                    n_altro = self.numeri_disponibili[0]; p_altro = self.pacchi_segreti[n_altro]
                    val_altro = p_altro["val_real"] if p_altro["tipo"] == "nero" else p_altro["nome"]
                    info_altro = f"<div style='margin-top:20px; color:#aaa; font-size:1.2em;'>L'altro pacco rimasto (n. {n_altro}) conteneva: <b>{val_altro}</b></div>"
                vincita = self.vincita_finale if self.vincita_finale else val_f
                center.children = [widgets.HTML(f"<div class='reveal-card'><h2>NEL TUO PACCO {self.pacco_giocatore} C'ERA</h2><div class='reveal-value' style='color:#f1c40f'>{val_f}</div>{info_altro}<hr style='border:1px solid #444; margin:30px 0;'><h2 style='color:#2ecc71; font-size:2.5em;'>HAI VINTO: {vincita}</h2></div>")]

            main_layout = widgets.HBox([self.render_column(True), center, self.render_column(False)], layout=widgets.Layout(justify_content='space-between', width='100%'))
            ui = widgets.VBox([header, main_layout]); ui.add_class("game-body")
            display(ui)

    def get_grid(self, lista, cb):
        btns = []
        for n in lista:
            b = widgets.Button(description=str(n)); b.add_class("pacco-orange"); b.on_click(cb)
            btns.append(b)
        return widgets.VBox([widgets.HBox(btns[i:i+4], layout=widgets.Layout(justify_content='center')) for i in range(0, len(btns), 4)])

    def sel_ini(self, b):
        self.pacco_giocatore = int(b.description)
        if self.pacco_giocatore in self.numeri_disponibili: self.numeri_disponibili.remove(self.pacco_giocatore)
        self.fase = "GAME"; self.update_ui()

    def sel_game(self, b):
        self.apri_pacco(int(b.description))

    def render_doctor_ui(self, container):
        premi_r = [self.mappa_premi[pid]["val"] for pid in self.premi_attivi]
        premi_r.append(self.pacchi_segreti[self.pacco_giocatore]["val"])
        ev = statistics.mean(premi_r)
        mossa = "CAMBIO" if self.ultima_mossa_dottore == "OFFERTA" else "OFFERTA"
        self.ultima_mossa_dottore = mossa

        if mossa == "OFFERTA":
            v_o = int(ev * random.uniform(0.4, 0.75)); o_s = f"{v_o:,.0f} €".replace(",", ".")
            container.children = [
                widgets.HTML(f"<div class='reveal-card'><h2 style='color:#cc0000'>☎️ IL DOTTORE OFFRE</h2><div class='reveal-value' style='color:#2ecc71'>{o_s}</div></div>"),
                widgets.HBox([widgets.Button(description="ACCETTA", button_style='success'), widgets.Button(description="RIFIUTA", button_style='danger')])
            ]
            def acc(x): self.vincita_finale = o_s; self.fase = "END"; self.update_ui()
            container.children[1].children[0].on_click(acc)
            container.children[1].children[1].on_click(lambda x: self.next_r())
        else:
            container.children = [
                widgets.HTML("<div class='reveal-card'><h2 style='color:#cc0000'>☎️ IL DOTTORE PROPONE</h2><div class='reveal-value' style='color:#f39c12'>IL CAMBIO</div></div>"),
                widgets.HBox([widgets.Button(description="CAMBIA PACCO", button_style='warning'), widgets.Button(description="TIENI IL TUO", button_style='primary')])
            ]
            def attiva_scelta_cambio(x):
                self.fase = "SWAP_CHOICE"
                self.update_ui()
            container.children[1].children[0].on_click(attiva_scelta_cambio)
            container.children[1].children[1].on_click(lambda x: self.next_r())

    def esegui_scambio_manuale(self, b):
        vecchio = self.pacco_giocatore
        nuovo = int(b.description)

        # Effettuo lo scambio
        self.numeri_disponibili.append(vecchio) # Il vecchio torna nel tabellone
        self.pacco_giocatore = nuovo           # Il nuovo diventa mio
        self.numeri_disponibili.remove(nuovo)   # Il nuovo sparisce dai cliccabili

        self.messaggio_evento = f"Scambio effettuato: avevi il {vecchio}, ora hai il {nuovo}!"
        self.next_r()

    def next_r(self):
        self.aperti_ora = 0
        self.pacchi_da_aprire = 3 if len(self.numeri_disponibili) > 8 else 1
        self.fase = "GAME"; self.update_ui()

# --- Lancio ---
inst_v7 = AffariTuoiV7()
display(inst_v7.output); inst_v7.update_ui()
